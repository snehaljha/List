<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/design"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:textColor="@color/barca_pink"
                    android:textColorHint="@android:color/darker_gray"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:lines="3"
                    android:id="@+id/new_task" android:layout_weight="1" android:hint="@string/enter_task" android:textSize="24sp"
                    android:importantForAutofill="no" tools:targetApi="o"/>
            <Button
                    android:text="@string/add"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_style"
                    android:textColor="@color/barca_pink"
                    android:layout_height="100dp" android:id="@+id/add_btn" android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll_view">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/task_contain"/>
        </ScrollView>

    </LinearLayout>
</layout>