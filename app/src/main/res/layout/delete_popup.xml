<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/barca_indigo"
              android:layout_gravity="center">


    <TextView
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/barca_pink"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:id="@+id/del_title"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        <Button
                android:text="@string/no"
                android:textSize="22sp"
                android:layout_width="125sp"
                android:background="@drawable/button_style"
                android:textColor="@color/barca_pink"
                android:layout_height="wrap_content" android:id="@+id/no_btn" android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button
                android:text="@string/yes"
                android:layout_width="125sp"
                android:background="@drawable/button_style"
                android:textColor="@color/barca_pink"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/yes_btn"
                android:layout_weight="1" tools:ignore="ButtonStyle"/>
    </LinearLayout>
</LinearLayout>